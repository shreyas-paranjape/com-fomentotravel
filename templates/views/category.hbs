<div class="category">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-label="Close">
			<span aria-hidden="true">&times;</span>
		</button>
		<h2 class="modal-title">{{category.name}}</h2>
	</div>
	<div class="modal-body">
		{{#each items}}
			<div class="row container1">
				<div class="col-md-8 col-lg-8 col-xs-7 col-sm-7">
					<h2>{{name}}</h2>
					<p>{{{description}}}</p>
				</div>
				<div class="col-md-4 col-lg-4 col-xs-5 col-sm-5 modal-no-padding">
					<img src="{{cloudinaryUrl image}}" alt="{{name}}" style="width:100%;height:auto;" />
				</div>
			</div>
		{{/each}}
		<!-- <br /> -->
	</div>
</div>
