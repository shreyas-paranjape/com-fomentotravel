<div class="container center">
	{{>header}}
	<div class="row" style="padding-bottom:150px;padding-top:20px;">
		<div class="col-md-6" style="margin-left:0px; text-align:center;">
			<h3>
				<span class="glyphicon glyphicon-home" aria-hidden="true"></span>
			</h3>
			<h4>Contact Us</h4>
			</br>
			<h5>Fomento Travel</h5>
			<h5>2nd Floor, Kamat Metropolis </h5>
			<h5>St. Inez, Panjim</h5>
			<h5>Goa - 403 001</h5>
			<h5>
				<span class="glyphicon glyphicon-envelope" aria-hidden="true"></span> contact@fomentotravel.com</h5>
			<h5>
				<span class="glyphicon glyphicon-phone-alt" aria-hidden="true"></span> 0832-2405900</h5>
			</br>
		</div>
		<div class="container col-md-6">
			{{#if enquirySubmitted}}
				<h3>Thanks for getting in touch.</h3>
			{{else}}
				<form method="post">
					<input type="hidden" name="action" value="contact">
					<div class="form-group {{#if validationErrors.name}}has-error{{/if}}">
						<label>Name</label>
						<input type="text" name="name.full" class="form-control" value="{{formData.[name.full]}}">
					</div>
					<div class="form-group {{#if validationErrors.email}}has-error{{/if}}">
						<label>Email</label>
						<input type="email" name="email" class="form-control" value="{{formData.email}}">
					</div>
					<div class="form-group">
						<label>Phone</label>
						<input type="text" name="phone" placeholder="(optional)" class="form-control" value="{{formData.phone}}">
					</div>
					<div class="form-group {{#if validationErrors.message}}has-error{{/if}} ">
						<label>Message</label>
						<textarea name="message" placeholder="Leave us a message..." rows="4" class="form-control">{{formData.message}}</textarea>
					</div>
					<div class="form-actions">
						<button type="submit" class="btn btn-primary">Send</button>
					</div>
				</form>
			{{/if}}
		</div>
	</div>
	{{>footer}}
</div>
